<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/recyclerLabel1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:textColor="#D231FF"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        android:textSize="20sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHome1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerLabel1" />


                    <TextView
                        android:id="@+id/recyclerLabel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerHome1" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHome2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerLabel2" />

                    <TextView
                        android:id="@+id/recyclerLabel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#7BFF75"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerHome2" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHome3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerLabel3" />

                    <TextView
                        android:id="@+id/recyclerLabel4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#FF3126"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerHome3" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHome4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerLabel4" />

                    <TextView
                        android:id="@+id/recyclerLabel5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="20dp"
                        android:textColor="#47C5FF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerHome4" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerHome5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        app:layout_constraintTop_toBottomOf="@+id/recyclerLabel5" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</layout>