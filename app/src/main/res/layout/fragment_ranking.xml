<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ranking_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:text="Ranking Geral"
            android:textAlignment="center"
            android:textSize="@dimen/default_title_size" />

        <TableLayout
            android:id="@+id/simpleTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:stretchColumns="1"
            app:layout_constraintTop_toBottomOf="@+id/ranking_title"> <!-- stretch the second column of the layout-->

            <!-- first row of the table layout-->
            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:textColor="#000">

                <TextView
                    android:id="@+id/position"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@color/whiteStyle"
                    android:padding="18dip"
                    android:text=""
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/name_ranking"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@color/whiteStyle"
                    android:padding="18dip"
                    android:text=""
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/scores"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@color/whiteStyle"
                    android:padding="18dip"
                    android:text=""
                    android:textSize="@dimen/default_text_size" />

            </TableRow>

        </TableLayout>
    </android.support.constraint.ConstraintLayout>
</layout>