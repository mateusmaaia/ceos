<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginBottom="15dp"
    android:background="@color/colorPrimaryDark"
    android:elevation="5dp"
    android:id="@+id/recycleChallenge">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recycleChallengeImage"
        android:layout_width="20sp"
        android:layout_height="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/challenge_icon"/>

    <TextView
        android:id="@+id/recycleChallengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/whiteStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintLeft_toRightOf="@+id/recycleChallengeImage"
        app:layout_constraintRight_toLeftOf="@+id/recycleChallengeButton"/>

    <Button
        android:id="@+id/recycleChallengeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Resolver"
        android:textColor="@color/whiteStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>