<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#616060">


    <TextView
        android:id="@+id/positionRanking"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_margin="2dp"
        android:background="@color/whiteStyle"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/userNameRanking"
        tools:background="#000000"
        tools:text="TESTE"
        tools:textColor="#ffff01" />

    <TextView
        android:id="@+id/userNameRanking"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_margin="2dp"
        android:background="@color/whiteStyle"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintLeft_toRightOf="@+id/positionRanking"
        app:layout_constraintRight_toLeftOf="@+id/scoreRanking"
        tools:background="#000000"
        tools:text="TESTE"
        tools:textColor="#ffff01" />

    <TextView
        android:id="@+id/scoreRanking"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_margin="2dp"
        android:background="@color/whiteStyle"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@+id/userNameRanking"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="#000000"
        tools:text="TESTE"
        tools:textColor="#ffff01" />

</android.support.constraint.ConstraintLayout>